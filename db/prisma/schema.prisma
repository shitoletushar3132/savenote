model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  name       String
  password   String?
  provider   String?
  providerId String?  @unique
  image      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Note       Note[]
}

model Note {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  color       String   @default("#C0C0C0")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
}
